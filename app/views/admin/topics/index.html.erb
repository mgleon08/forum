<h1>管理者介面</h1>


<!-- 類別＋標籤 -->

<div class="container">
  <div class= "row">
      <div class="col-sm-6">
      <%= link_to "新增類別", new_admin_category_path, :class => "btn btn-success"%>
      <br>
      <br>
        <table class="table table-striped">
          <tr class=" success">
            <td>ID</td>
            <td>類別</td>
            <td>數量</td>
            <td>編輯</td>
            <td>刪除</td>
          </tr>
          <%@categories.each do |c|%>
          <tr>
            <td><%=c.id%></td>
            <td><%=c.name%></td>
            <td><%=c.topics.count%></td>
            <td><%= link_to "編輯", edit_admin_category_path(c),:class => "btn btn-default"%></td>
            <td><%= link_to "刪除", admin_category_path(c), :method => :delete,:class => "btn btn-default"%></td>
          </tr>
           <%end%>
        </table>
      </div>
      <div class="col-sm-6">
      <%= link_to "新增標籤", new_admin_tag_path, :class => "btn btn-success"%>
      <br>
      <br>
        <table class="table table-striped">
          <tr class="warning">
            <td>ID</td>
            <td>標籤</td>
            <td>數量</td>
            <td>編輯</td>
            <td>刪除</td>
          </tr>
          <%@tags.each do |c|%>
          <tr>
            <td><%=c.id%></td>
            <td><%=c.name%></td>
            <td><%=c.topics.count%></td>
            <td><%= link_to "編輯", edit_admin_tag_path(c),:class => "btn btn-default"%></td>
            <td><%= link_to "刪除", admin_tag_path(c), :method => :delete,:class => "btn btn-default"%></td>
          </tr>
           <%end%>
           <tr>
           </tr>
        </table>
      </div>
  </div>
</div>


<h2>會員清單</h2>
<table class="table table-striped">
  <tr class="danger">
    <td>ID</td>
    <td>名稱</td>
    <td>信箱</td>
    <td>個人簡介</td>
    <td>權限</td>
    <td>編輯</td>
  </tr>
  <%@users.each do |u|%>
  <tr>
    <td><%=u.id%></td>
    <td><%=u.user_name%></td>
    <td><%=u.email%></td>
    <td><%=u.introduction.try(:pro)%></td>
    <td><%=u.role%></td>
    <td><%=link_to "編輯", edit_admin_user_path(u), :class => "btn btn-default"%></td>
  </tr>
  <%end%>
</table>
<%=link_to "回首頁", root_path, :class => "btn btn-primary"%>

