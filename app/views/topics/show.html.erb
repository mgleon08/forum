<h1><%=@topic.name%></h1>
<p><%=@topic.article%></p>

<%=link_to "回首頁", topics_path, :class => "btn btn-primary"%>

<br/>
<br/>
<table class="table table-bordered">
<tr>
  <td>留言內容</td>
  <td>發布人</td>
  <td>發布時間</td>
</tr>


<%@topic.comments.each do |t|%>
  <tr>
    <td><%=t.user_comment%></td>
    <td><%=t.user.try(:user_name)%></td>
    <td><%=t.created_at%></td>
  </tr>
<%end%>
</table>


<%=form_for @comment, :url => topic_comments_path(@topic) do |t|%>
<h2><%= t.label :user_comment, "留言:"%></h2>
<%= t.text_area :user_comment, :class => "form-control"%>
<br/>
<%= t.submit "送出", :class => "btn btn-success"%>
<%end%>
